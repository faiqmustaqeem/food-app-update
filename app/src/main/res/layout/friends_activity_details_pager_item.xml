<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#50000000"
        android:padding="4dp"
        android:src="@drawable/ic_share_restaurant"
        android:tint="@android:color/white" />

    <com.facebook.share.widget.ShareButton
        android:id="@+id/fb_share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivShare"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/ivShare"
        android:layout_toStartOf="@+id/ivShare" />

    <ImageView
        android:id="@+id/ivActivityPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pic1" />

    <TextView
        android:id="@+id/tvActivityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#50000000"
        android:padding="8dp"
        android:text="Sample activity description"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvActivityText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#50ffffff"
        android:orientation="horizontal"
        android:text="Like">

        <TextView
            android:id="@+id/tvLike"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/tvActivityText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="14dp"
            android:text="Like" />

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvActivityText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="14dp"
            android:text="24 Comments" />

    </LinearLayout>


</RelativeLayout>