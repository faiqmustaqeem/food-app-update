<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#80000000"
        >
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvRestaurantTitle"
            android:layout_height="wrap_content"
            android:text="Deal Title"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/tvDuration"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvRestaurantType"
            android:layout_height="wrap_content"
            android:text="Food Type"
            android:textColor="@android:color/white"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/tvDealTitle"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tvDuration"
            android:layout_height="wrap_content"
            android:text="20-30 MIN"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 855"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:id="@+id/tvPrice"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDuration"
            android:visibility="invisible"/>
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/ivRestaurantImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />
</FrameLayout>